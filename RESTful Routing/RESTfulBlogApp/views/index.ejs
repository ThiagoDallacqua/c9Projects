<% include partials/header %>

<h1>INDEX PAGE</h1>

<% blogs.forEach(function(blog){ %>
    
        <div>
            
            <h2><%= blog.title %></h2>
            <img src="<%= blog.image %>" style="width: 30%">
            <span><%= blog.created %></span>
            <p><%= blog.body.substring(0, 100) %>...</p>
            <a href="/index/<%= blog._id %>">Read More!</a>
        </div>
<% }) %>

<% include partials/footer %>